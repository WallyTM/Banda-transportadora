#include <Servo.h>
  //SENSOR TCS230
  const int s0=9;
  const int s1 = 10;
  const int s2 = 2;
  const int s3 = 3;
  const int out = 4;
  //LASER-Y-DETECTOR
  const int Laser = 6;
  const int Detector = 7;
  //SERVOMOTOR
  Servo myservo;  //creamos un objeto servo 
  int angulo;
  //BOTON START-STOP//
  //const int ent1 = 9;
  //const int ent2 = 10;
  //MOTOR PUENTE H
  const int IN1 = 11;
  const int IN2 = 12;
  //VALORES INDEPENDIENTES
  int P = 0;
  int X = 0;
  int Y = 0;
  int Z = 0;
  int D = 0;
  int B = 0;
  int C = 0;
  int E = 0;
  int H = 0;
  int J = 0;
  int F = 0;
  int G = 0;
void setup() {
  Serial.begin(9600);
  //SENSOR DE COLOR TCS230//
  pinMode (s0, OUTPUT); //sensor de color
  pinMode (s1, OUTPUT); //sensor de color
  pinMode (s2, OUTPUT); //sensor de color
  pinMode (s3, OUTPUT); //sensor de color
  pinMode (out, INPUT); //sensor de color
  //LASER-Y-DETECTOR
  pinMode(Laser, OUTPUT);
  pinMode(Detector, INPUT);
  //SERVOMOTOR
  myservo.attach(8);  // asignamos el pin 8 al servo.
  //ENTRADA START/STOP//
//  pinMode (ent1, INPUT);
 // pinMode (ent2, INPUT);
  //MOTOR PUENTE H//
  pinMode (IN1, OUTPUT);
  pinMode (IN2, OUTPUT);

}

