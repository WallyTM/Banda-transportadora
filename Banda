void sensorTCS230() {
  //VARIABLES
  //A = 0;
  //B = 0;
  //C = 0;
  //SENSOR TCS230
  digitalWrite(s0, HIGH); // escala de frecuencia saliente 100% - 600KHz
  digitalWrite(s1, HIGH); // escala de frecuencia saliente 100% - 600KHz
  int R = getRojo();
  delay(200);
  int V = getVerde();
  delay(200);
  int A = getAzul();
  delay(200);
  
  Serial.print ("INT R " + String(R));
  Serial.print ("  --  INT V " + String(V));
  Serial.println ("  --  INT A " + String(A));
  
  if ( R > 8 && R < 14 && V > 28 && V < 36 && A > 21 && A < 29 ){
  D = 1;
  Serial.print (" TOMATE ROJO "); 
  }
  else if ( R > 8 && R < 14 && V > 11 && V < 14 && A > 11 && A < 17 ){
  Serial.print (" TOMATE VERDE "); 
  B = 1;
  }
  else if ( R > 8 && R < 13 && V > 13 && V < 20 && A > 17 && A < 24 ){
  Serial.print (" TOMATE AMARILLO "); 
  C = 1;
  }
  else {
  Serial.print(" EL COLOR NO HA SIDO REGISTRADO "); 
  }
  Serial.println (" ");
}

void laser() {
  //LASER-Y-DETECTOR
  digitalWrite(Laser, HIGH);
  boolean val = digitalRead(Detector);
  Serial.println(val);
  if (val == 0){
    Serial.print(" ay esta ");
  E = 1;
  F = 1;
  G = 1;
  }
}

void servomotor(){
  //SUMA DE VARIABLES
  Z = D + E;
  H = B + F;
  J = C + G;
  //CONDICION DE MOVIMIENTO DEL SERVOMOTOR
  while (Z == 2) {
   angulo= 90;
   myservo.write(angulo);
   Serial.print("ángulo:  ");
   Serial.println(angulo);
   delay(2000);
   
   angulo= 0;
   myservo.write(angulo);
   Serial.print("ángulo:  ");
   Serial.println(angulo);
   delay(2000);  

   angulo= 90;
   myservo.write(angulo);
   Serial.print("ángulo:  ");
   Serial.println(angulo);
   delay(2000);

   D = 0;
   B = 0;
   C = 0;
   E = 0;
   F = 0;
   G = 0;
   return;
    }
  while (H == 2) {
   angulo= 90;
   myservo.write(angulo);
   Serial.print("ángulo:  ");
   Serial.println(angulo);
   delay(2000);
   
   angulo= 180;
   myservo.write(angulo);
   Serial.print("ángulo:  ");
   Serial.println(angulo);
   delay(2000);

   angulo= 90;
   myservo.write(angulo);
   Serial.print("ángulo:  ");
   Serial.println(angulo);
   delay(2000);

   D = 0;
   B = 0;
   C = 0;
   E = 0;
   F = 0;
   G = 0;
   return;
    }
  while (J == 2) {
   angulo= 90;
   myservo.write(angulo);
   Serial.print("ángulo:  ");
   Serial.println(angulo);
   delay(2000);
   D = 0;
   B = 0;
   C = 0;
   E = 0;
   F = 0;
   G = 0;
   return;
  }
  
  }

//TCS230
int getRojo(){
  //leer color rojo
  digitalWrite (s2, LOW);
  digitalWrite (s3, LOW);
  int ROJO = pulseIn(out, LOW);
  return ROJO;
}
int getAzul(){
  //leer color rojo
  digitalWrite (s2, LOW);
  digitalWrite (s3, HIGH);
  int AZUL = pulseIn(out, LOW);
  return AZUL;
}

int getVerde(){
  //leer color rojo
  digitalWrite (s2, HIGH);
  digitalWrite (s3, HIGH);
  int VERDE = pulseIn( out , LOW);
  return VERDE;
}

  void loop(){
    STARTSTOP();
    sensorTCS230();
    laser();
    servomotor();
  }
